        <item name="android:fontFamily">@font/luckiest_guy</item>

        <item name="android:textSize">30sp</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">5</item>
        <item name="android:shadowDy">5</item>
        <item name="android:shadowRadius">5</item>


        <item name="android:minHeight">85dp</item>
        <item name="android:minWidth">190dp</item>

        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>

    </style>

    <style name="DarkBlueTextView" parent="Widget.AppCompat.TextView">
        <item name="android:background">@drawable/dark_blue_textview_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>

        <item name="android:fontFamily">@font/luckiest_guy</item>

        <item name="android:textSize">30sp</item>
