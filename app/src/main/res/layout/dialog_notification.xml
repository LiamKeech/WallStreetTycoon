<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/notificationCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="@color/NotificationInfo"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp"
    app:cardMaxElevation="10dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Circular icon with text -->
        <TextView
            android:id="@+id/lblNotificationIcon"
            style="@style/notificationIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="i"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Close X button (always visible) -->
        <TextView
            android:id="@+id/btnClose"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:text="âœ•"
            android:textSize="18sp"
            android:textColor="#666666"
            android:gravity="center"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Title -->
        <TextView
            android:id="@+id/txtNotificationTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="8dp"
            android:text="Market Event"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:fontFamily="@font/jua"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintStart_toEndOf="@id/lblNotificationIcon"
            app:layout_constraintEnd_toStartOf="@id/btnClose"
            app:layout_constraintTop_toTopOf="@id/lblNotificationIcon" />

        <!-- Description -->
        <TextView
            android:id="@+id/txtNotificationInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:text="Event information appears here"
            android:textSize="12sp"
            android:textColor="#333333"
            android:fontFamily="@font/jua"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintStart_toStartOf="@id/txtNotificationTitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtNotificationTitle" />

        <!-- Button container (only for alerts/actions) -->
        <!-- Button container (only for alerts/actions) -->
        <LinearLayout
            android:id="@+id/buttonContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:gravity="end"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtNotificationInfo">

            <!-- Not Now button -->
            <androidx.appcompat.widget.AppCompatButton
                style="@style/GreyButtonSmall"
                android:id="@+id/btnNotNow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NOT NOW"
                android:layout_marginEnd="8dp" />

            <!-- Open button -->
            <androidx.appcompat.widget.AppCompatButton
                style="@style/LightBlueButtonSmall"
                android:id="@+id/btnOpen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OPEN" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>