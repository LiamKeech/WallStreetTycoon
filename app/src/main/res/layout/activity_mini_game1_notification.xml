<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/homeButton"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".minigames.miniGame1.miniGame1Notification"
    android:background="@color/LightGrey">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/FieldLogin"
        android:layout_width="652dp"
        android:layout_height="306dp"
        android:background="@drawable/rounded_nav_view"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.659">

        <Button
            android:id="@+id/start_button"
            android:layout_width="172dp"
            android:layout_height="88dp"
            android:backgroundTint="@color/Orange"
            android:text="Start"
            android:textColor="@color/white"
            android:textSize="17sp"
            app:cornerRadius="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/lblInstructions"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/lblInstructions"
            android:layout_width="310dp"
            android:layout_height="255dp"
            android:layout_margin="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="36dp"
            android:background="@drawable/rounded_background"
            android:backgroundTint="@color/LightBlue"
            android:lineSpacingExtra="6dp"
            android:padding="16dp"
            android:text="The Dot-Com Boom is in full swing, and tech companies are exploding in value! To take advantage of this surge, you need to buy shares in promising tech companies when their prices are low, then sell them when the prices rise. Timing is everythingâ€”buy low, sell high, and watch your profits grow as you ride the wave of the digital revolution."
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.4" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/lblGameTitle"
        android:layout_width="286dp"
        android:layout_height="57dp"
        android:background="@drawable/rounded_textview"
        android:gravity="center"
        android:text="The Dot-Com Boom"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.079" />

</androidx.constraintlayout.widget.ConstraintLayout>
