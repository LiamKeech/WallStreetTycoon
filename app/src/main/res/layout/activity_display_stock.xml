<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0E0E0">

    <!-- Header with Back Button and Stock Name -->
    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="49dp"
        android:layout_height="49dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/LightGrey"
        android:contentDescription="Back"
        android:padding="8dp"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_back" />

    <TextView
        android:id="@+id/stockNameHeader"
        style="@style/DarkBlueTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        android:text="Viewing TechCorp"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/backButton"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Stock Details Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/stockDetailsCard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/stockNameHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/stockChart"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Stock Symbol Section -->
            <TextView
                style="@style/subHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stock Symbol:"/>

            <TextView
                android:id="@+id/stockSymbolValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="AAA"
                android:fontFamily="@font/jua"
                android:textColor="#000000"
                android:textSize="18sp" />

            <!-- Current Price Section -->
            <TextView
                style="@style/subHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Current Price:"/>

            <TextView
                android:id="@+id/currentPriceValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="$50.00"
                android:fontFamily="@font/jua"
                android:textColor="#000000"
                android:textSize="18sp" />

            <!-- Description Section -->
            <TextView
                style="@style/subHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Description:" />

            <EditText
                android:id="@+id/stockDescription"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="4dp"
                android:layout_weight="1"
                android:background="@drawable/edittext_border"
                android:enabled="false"
                android:fontFamily="@font/jua"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:maxLines="5"
                android:overScrollMode="always"
                android:padding="8dp"
                android:scrollbars="vertical"
                android:text="Stock A relates to market X."
                android:textColor="#000000"
                android:textSize="16dp"
                android:verticalScrollbarPosition="right" />

            <!-- Spacer to push buttons to bottom -->
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.1" />

            <!-- Buy/Sell Buttons Container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    style="@style/GreenButtonMedium"
                    android:id="@+id/btnBuy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:padding="12dp"
                    android:text="BUY" />

                <androidx.appcompat.widget.AppCompatButton
                    style="@style/RedButtonMedium"
                    android:id="@+id/btnSell"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:text="SELL" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Chart -->
    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/stockChart"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/stockNameHeader"
        app:layout_constraintStart_toEndOf="@id/stockDetailsCard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/timeRangeButtons"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp" />

    <!-- Time Range Buttons - Centered below chart -->
    <LinearLayout
        android:id="@+id/timeRangeButtons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/stockDetailsCard"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            style="@style/OrangeButtonSmall"
            android:id="@+id/btn1D"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:padding="8dp"
            android:text="1D" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/OrangeButtonSmall"
            android:id="@+id/btn1W"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:padding="8dp"
            android:text="1W" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/OrangeButtonSmall"
            android:id="@+id/btn1M"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="1M" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>