<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="3dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:gravity="center_horizontal">

        <!-- Top Row: Stock Symbol and Type Badge -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                style="@style/cardHeading"
                android:id="@+id/tv_stock_symbol"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="AAPL"
                android:gravity="start|center_vertical"/>

            <TextView
                android:id="@+id/tv_type_badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BUY"
                android:textSize="14sp"
                android:textColor="@color/Green"
                android:fontFamily="@font/jua"
                android:letterSpacing="0.05"
                android:gravity="end|center_vertical"/>
        </LinearLayout>

        <!-- Date -->
        <TextView
            android:id="@+id/tv_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="July 20, 2024"
            style="@style/text"
            android:layout_marginTop="2dp"
            android:gravity="start"/>

        <!-- Amount -->
        <TextView
            android:id="@+id/tv_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+$1,250.00"
            android:textSize="30sp"
            android:textColor="@color/Green"
            android:fontFamily="@font/jua"
            android:layout_marginTop="6dp"
            android:letterSpacing="-0.01"
            android:gravity="start"/>

        <!-- Shares -->
        <TextView
            android:id="@+id/tv_shares"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="15 Shares"
            style="@style/text"
            android:layout_marginTop="4dp"
            android:gravity="start"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>