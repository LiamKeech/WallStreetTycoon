<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="#FFFFFF">

    <TextView
        style="@style/DarkBlueTextView"
        android:id="@+id/dialogHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Sell AAA"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/labelGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.35" />

    <TextView
        style="@style/subHeading"
        android:id="@+id/stockSymbolLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Stock Symbol:"
        app:layout_constraintEnd_toStartOf="@id/labelGuideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialogHeader" />

    <TextView
        android:id="@+id/stockID"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="AAA"
        style="@style/text"
        app:layout_constraintTop_toTopOf="@id/stockSymbolLabel"
        app:layout_constraintBottom_toBottomOf="@id/stockSymbolLabel"
        app:layout_constraintStart_toStartOf="@id/labelGuideline"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp" />

    <TextView
        style="@style/subHeading"
        android:id="@+id/currentPriceLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Current Price:"
        app:layout_constraintEnd_toStartOf="@id/labelGuideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/stockSymbolLabel" />

    <TextView
        android:id="@+id/currentPrice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="$50.00"
        style="@style/text"
        app:layout_constraintTop_toTopOf="@id/currentPriceLabel"
        app:layout_constraintBottom_toBottomOf="@id/currentPriceLabel"
        app:layout_constraintStart_toStartOf="@id/labelGuideline"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp" />

    <TextView
        style="@style/subHeading"
        android:id="@+id/quantityLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Quantity:"
        app:layout_constraintEnd_toStartOf="@id/labelGuideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/currentPriceLabel"
        app:layout_constraintBaseline_toBaselineOf="@id/quantityInput" />

    <EditText
        android:id="@+id/quantityInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter shares"
        style="@style/text"
        android:inputType="number"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/currentPrice"
        app:layout_constraintStart_toStartOf="@id/labelGuideline"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp" />

    <TextView
        style="@style/subHeading"
        android:id="@+id/sharesRemainingLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Shares Remaining"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toStartOf="@id/totalProceedsLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/quantityInput" />

    <TextView
        style="@style/subHeading"
        android:id="@+id/totalProceedsLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Total Proceeds"
        android:layout_marginStart="8dp"
        android:textAlignment="textEnd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/sharesRemainingLabel"
        app:layout_constraintTop_toBottomOf="@id/quantityInput" />

    <TextView
        android:id="@+id/sharesRemaining"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="0.00"
        style="@style/text"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toStartOf="@id/totalProceeds"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sharesRemainingLabel" />

    <TextView
        android:id="@+id/totalProceeds"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="$0.00"
        style="@style/text"
        android:textAlignment="textEnd"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/sharesRemaining"
        app:layout_constraintTop_toBottomOf="@id/totalProceedsLabel" />

    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sharesRemaining"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnConfirm"
            style="@style/GreenButtonMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:padding="12dp"
            android:text="Confirm" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnCancel"
            style="@style/OrangeButtonMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="Cancel" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>