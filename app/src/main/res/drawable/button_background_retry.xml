<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow -->
    <item>
            <shape android:shape="oval">
                <solid android:color="@color/GreenShadow"/>
                <stroke android:width="2dp" android:color="@color/black"/>
            </shape>
    </item>

    <!-- Highlight -->
    <item>
        <inset android:insetLeft="2dp" android:insetTop="2dp"
            android:insetRight="6dp" android:insetBottom="6dp">
            <shape android:shape="oval">
                <solid android:color="@color/GreenHighlight"/>
            </shape>
        </inset>
    </item>

    <!-- Main circle -->
    <item>
        <inset android:insetLeft="4dp" android:insetTop="4dp"
            android:insetRight="0dp" android:insetBottom="0dp">
            <shape android:shape="oval">
                <solid android:color="@color/Green"/>
            </shape>
        </inset>
    </item>


    <item
        android:drawable="@drawable/refresh_24_black"
        android:gravity="center"/>
    <item
        android:drawable="@drawable/refresh_24"
        android:gravity="center"/>
</layer-list>
