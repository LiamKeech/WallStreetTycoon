<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:name=".model.GameStarterCloser"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher_wst_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_wst_logo_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.WallStreetTycoon">
        <activity
            android:name=".marketevent.NotificationsActivity"
            android:exported="false"
            android:screenOrientation="landscape" />
        <activity
            android:name=".profile.GameProfile"
            android:exported="false"
            android:screenOrientation="landscape" />
        <activity
            android:name=".minigames.miniGame3.miniGame3"
            android:exported="true"
            android:screenOrientation="landscape"></activity>
        <activity
            android:name=".minigames.miniGame3.miniGame3Notification"
            android:exported="true"
            android:screenOrientation="landscape"></activity>
        <activity
            android:name=".minigames.miniGame2.miniGame2"
            android:exported="true"
            android:screenOrientation="landscape"></activity>
        <activity
            android:name=".minigames.miniGame2.miniGame2Notification"
            android:exported="true"
            android:screenOrientation="landscape"></activity>
        <activity
            android:name=".minigames.miniGame1.miniGame1Notification"
            android:exported="true"
            android:screenOrientation="landscape">

        </activity>
        <activity
            android:name=".minigames.miniGame1.miniGame1"
            android:exported="true"
            android:screenOrientation="landscape"></activity>
        <activity
            android:name=".dashboard.ListStocks"
            android:exported="false"
            android:screenOrientation="landscape" />
        <activity
            android:name=".displayBuySell.DisplayStockActivity"
            android:exported="true"
            android:screenOrientation="landscape" />
        <activity
            android:name=".useraccount.CreateAccount"
            android:exported="false"
            android:screenOrientation="landscape" />
        <activity
            android:name=".useraccount.Login"
            android:exported="true"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".useraccount.ManageUserAccount"
            android:exported="false"
            android:screenOrientation="landscape"></activity>
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:screenOrientation="landscape"
            tools:ignore="DiscouragedApi"></activity>
    </application>

</manifest>